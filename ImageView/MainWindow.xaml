<Window x:Class="ImageView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageView"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Foreground="#FFF7EDED">
    <Grid Background="Black" AllowDrop="True" DragEnter="Grid_DragEnter" Drop="Grid_Drop">
        <Image x:Name="image" AllowDrop="True" DragEnter="image_DragEnter" Drop="image_Drop" MouseWheel="image_MouseWheel" Margin="0,0,0,0.5" SizeChanged="image_SizeChanged" MouseRightButtonDown="image_MouseRightButtonDown" MouseLeftButtonDown="image_MouseLeftButtonDown"/>

    </Grid>
</Window>
